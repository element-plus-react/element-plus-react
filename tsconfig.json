{
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "typings",
    "outDir": "./",
    "sourceMap": true,
    "typeRoots": ["./typings"]
  },
  "include": ["./packages"],
  "exclude": ["node_modules", "lib", "es"]
}
