{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "typings",
    "outDir": "./",
    "sourceMap": true,
    "typeRoots": ["./typings"],
    "preserveSymlinks": true,
    "paths": {
      "element-plus-react": ["./packages/element-plus-react/src"],
      "@element-plus/components": ["./packages/components/src"],
      "@element-plus/utils": ["./packages/utils/src"],
      "@element-plus/hooks": ["./packages/hooks/src"]
    }
  },
  "include": [".", "packages/components/.fatherrc.ts", "packages/components/.fatherrc.ts"],
  "exclude": ["node_modules", "lib", "es"]
}
