{
  "private": true,
  "workspaces": [
    "packages/*",
    "playground/*"
  ],
  "scripts": {
    "prepare": "husky install && dumi setup",
    "start:play": "pnpm -C playground/play run start",
    "start:docs": "dumi dev",
    "build:docs": "dumi build",
    "publish:docs": "gh-pages -d dist",
    "build": "node ./scripts/build/index.js",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx --max-warnings 0 && pretty-quick --check --branch dev",
    "lint:fix": "eslint --fix . --ext .js,.ts,.jsx,.tsx && pretty-quick --branch dev",
    "update:deps": "pnpm up -i -r -L",
    "clearDir": "node ./scripts/clearDir.js"
  },
  "dependencies": {
    "dumi": "^2.2.12"
  },
  "devDependencies": {
    "@element-plus/components": "workspace:1.0.0",
    "@element-plus/hooks": "workspace:1.0.0",
    "@element-plus/utils": "workspace:1.0.0",
    "@types/node": "18",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.11",
    "@umijs/lint": "^4.0.83",
    "cross-env": "^7.0.3",
    "element-plus-react": "workspace:0.0.4",
    "eslint": "^8.51.0",
    "father": "^4.3.5",
    "gh-pages": "^6.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "sass": "^1.69.0",
    "typescript": "^5.2.2"
  },
  "resolutions": {
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": []
    }
  },
  "browserslist": [
    "defaults",
    "not ie < 8",
    "last 2 versions",
    "> 1%",
    "iOS 7",
    "last 3 iOS versions"
  ]
}
