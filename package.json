{
  "private": true,
  "packageManager": "pnpm@7.15.0",
  "workspaces": [
     "packages/*",
     "playground/*",
     "internal/*"
  ],
  "scripts": {
    "prepare": "husky install && dumi setup",
    "start:play": "pnpm -C playground/play run start",
    "start:docs": "dumi dev",
    "build:docs": "dumi build",
    "publish:docs": "gh-pages -d dist",
    "build": "node ./scripts/build/index.js",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx --max-warnings 0 && pretty-quick --check --branch dev",
    "lint:fix": "eslint --fix . --ext .js,.ts,.jsx,.tsx && pretty-quick --branch dev",
    "update:deps": "pnpm up -r --workspace",
    "clearDir": "node ./scripts/clearDir.js"
  },
  "dependencies": {
    "dumi": "^2.0.2"
  },
  "devDependencies": {
    "@element-plus/components": "workspace:*",
    "@element-plus/eslint-config": "workspace:*",
    "@element-plus/hooks": "workspace:*",
    "@element-plus/theme-chalk": "workspace:*",
    "@element-plus/utils": "workspace:*",
    "@types/lodash": "^4.14.189",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "cross-env": "^7.0.3",
    "element-plus-react": "workspace:*",
    "eslint": "^8.27.0",
    "father": "^4.1.0",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.56.1",
    "typescript": "^4.9.3"
  },
  "resolutions": {
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "prettier",
        "@babel/*",
        "rollup",
        "postcss",
        "react",
        "react-dom",
        "webpack",
        "stylelint",
        "eslint",
        "typescript"
      ]
    }
  },
  "browserslist": [
    "defaults",
    "not ie < 8",
    "last 2 versions",
    "> 1%",
    "iOS 7",
    "last 3 iOS versions"
  ]
}
