{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "vitest",
    "prepare": "husky && dumi setup",
    "start:play": "pnpm -C playground/play run start",
    "start:docs": "dumi dev",
    "build:docs": "dumi build",
    "publish:docs": "gh-pages -d dist",
    "build": "cd internal/element-plus-react && pnpm run build",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "dumi": "^2.4.13",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.8.0",
    "@element-plus/components": "workspace:1.0.0",
    "@element-plus/hooks": "workspace:1.0.0",
    "@element-plus/utils": "workspace:1.0.0",
    "@types/node": "^20.17.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "cross-env": "^7.0.3",
    "element-plus-react": "workspace:*",
    "eslint": "^9.13.0",
    "eslint-plugin-format": "^0.1.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "gh-pages": "^6.2.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "sass": "^1.80.4",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": []
    },
    "overrides": {
      "react": "18.3.1",
      "react-dom": "18.3.1"
    }
  },
  "packageManager": "pnpm@9.12.2"
}
