{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "vitest",
    "prepare": "husky && dumi setup",
    "start:play": "pnpm -C playground/play run start",
    "start:docs": "dumi dev",
    "build:docs": "dumi build",
    "publish:docs": "gh-pages -d dist",
    "build": "cd internal/element-plus-react && pnpm run build",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "dumi": "^2.4.17",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.14.0",
    "@element-plus/components": "workspace:1.0.0",
    "@element-plus/hooks": "workspace:1.0.0",
    "@element-plus/utils": "workspace:1.0.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "element-plus-react": "workspace:*",
    "eslint": "^9.18.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "sass": "^1.83.1",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": []
    },
    "overrides": {
      "react": "19.0.0",
      "react-dom": "19.0.0"
    }
  },
  "packageManager": "pnpm@9.15.3"
}
