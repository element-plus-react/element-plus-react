{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "vitest",
    "prepare": "husky && dumi setup",
    "start:play": "pnpm -C playground/play run start",
    "start:docs": "dumi dev",
    "build:docs": "dumi build",
    "publish:docs": "gh-pages -d dist",
    "build": "cd internal/element-plus-react && pnpm run build",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx --max-warnings 0 && pretty-quick --check --branch dev",
    "lint:fix": "eslint --fix . --ext .js,.ts,.jsx,.tsx && pretty-quick --branch dev"
  },
  "dependencies": {
    "dumi": "^2.2.17",
    "markdown-it": "^14.0.0"
  },
  "devDependencies": {
    "@element-plus/components": "workspace:1.0.0",
    "@element-plus/hooks": "workspace:1.0.0",
    "@element-plus/utils": "workspace:1.0.0",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.18",
    "@umijs/lint": "^4.1.2",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^7.0.3",
    "element-plus-react": "workspace:*",
    "eslint": "^8.56.0",
    "gh-pages": "^6.1.1",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sass": "^1.70.0",
    "typescript": "^5.4.2",
    "vite": "^5.0.12",
    "vitest": "^1.2.2"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": []
    },
    "overrides": {
      "react": "18.2.0",
      "react-dom": "18.2.0"
    }
  }
}
